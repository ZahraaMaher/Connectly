<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jobprovider.EditProviderInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/TV_ComName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Company Name"
                android:textSize="22sp"
                android:textColor="#B2BABB"/>

            <EditText
                android:id="@+id/ET_ComName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TV_ComName"
                android:background="#F3F3F3"
                android:textSize="22sp"
                android:hint="Enter Your Company Name"
                android:padding="8dp"/>

            <!--TextView
                android:id="@+id/TV_ComEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ET_ComName"
                android:layout_marginTop="5dp"
                android:text="Email"
                android:textSize="22dp"
                android:textColor="#B2BABB"/>

            <EditText
                android:id="@+id/ET_ComEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TV_ComEmail"
                android:background="#F3F3F3"
                android:textSize="22dp"
                android:padding="8dp"/-->

            <TextView
                android:id="@+id/TV_ComPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ET_ComName"
                android:layout_marginTop="5dp"
                android:text="Phone number"
                android:textSize="22sp"
                android:textColor="#B2BABB"/>

            <EditText
                android:id="@+id/ET_ComPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TV_ComPhoneNo"
                android:background="#F3F3F3"
                android:textSize="22sp"
                android:hint="Enter Your Phone Number"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/TV_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ET_ComPhoneNo"
                android:layout_marginTop="5dp"
                android:text="Address"
                android:textColor="#B2BABB"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/ET_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TV_Address"
                android:background="#F3F3F3"
                android:textSize="22sp"
                android:hint="Enter Your Company Address"
                android:padding="8dp"/>

            <Button
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ET_Address"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#917BB1"
                android:text="UPDATE" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>